@{
    ViewData["Title"] = "Personal library";
}

@model List<Book>

<style>
    .grid-books
    {
        display: grid;      
        grid-template-columns: repeat(auto-fill, 10%);
        grid-template-rows: repeat(auto-fill, 25%);
        grid-gap: 3%;
        grid:fit-content(); 
    }

    .cover-img
    {
        width: 100%;
        max-height: 200px;
        transition: all 0.3s ease-in-out;
    }

    .cover-img:hover
    {
            transform: scale(1.4);
            box-shadow: 0px 5px 25px rgba(0, 0, 0, 0.9);
    }

    .banner
    {
        align-content: flex-start;
        width: 100%;
    }

    .title
    {
        text-align: center;
        font-size: 300%;
        padding-top: 3%;
        padding-bottom: 1%;
    }

    label
    {
        font-size: smaller;
        align-items: center;
        align-self: center;
        align-content: center;
        color: black;
    }

</style>

<div style="height: 10%">
    <div>
        <img class="banner" src="/images/lib_banner.jpg">
        <h1 class="title">Personal library</h1>
    </div>

    <div>
        <div class="grid-books">
            @if (Model is not null)
            {
                foreach (var item in Model)
                {
                    var path = "/images";
                    var imagen = string.IsNullOrEmpty(item.Cover) ?
                        System.IO.Path.Combine(path, "default-cover.jpg") : System.IO.Path.Combine(path, item.Cover);

                    <a asp-controller ="InfoBook" asp-action="Details" asp-route-id=@item.Id>
                        <div>
                            <img src="@imagen" class="cover-img">
                            <label>@item.Title.ToUpper()</label>
                        </div>
                    </a>

                }       
             }
        </div>
    </div>
</div>
