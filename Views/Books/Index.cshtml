@{
    ViewData["Title"] = "Personal library";
}

@model List<Book>

<style>
    .grid-books
    {
        display: grid;
        grid-template-columns: repeat(auto-fill, 10%);
        grid-template-rows: repeat(auto-fill, 25%);
        grid-gap: 3%;
        grid:fit-content(); 
        width: 100%;
        height: 100%;
    }

    .cover-img
    {
        width: 100%;
        max-height: 200px;
        transition: all 0.3s ease-in-out;
    }

    .cover-img:hover
    {
            transform: scale(1.4);
            box-shadow: 0px 5px 25px rgba(0, 0, 0, 0.9);
    }


    h1
    {
        text-align: center;
    }

    label
    {
        font-size: smaller;
        align-items: center;
        align-self: center;
        align-content: center;
    }

    div
    {
        width: 100%;
    }

</style>

<div>
    <div>
        <img src="/images/lib_banner.jpg">
        <h1>Personal library</h1>
    </div>

    <div>
        <div class="grid-books">
            @if (Model is not null)
            {
                foreach (var item in Model)
                {
                    var path = "/images";
                    var imagen = string.IsNullOrEmpty(item.Cover) ?
                        System.IO.Path.Combine(path, "default-cover.jpg") : System.IO.Path.Combine(path, item.Cover);
                    
                    <div>
                        <img src="@imagen" class="cover-img">
                        <label>@item.Title.ToUpper()</label>
                    </div>
                }
             }
            </div>
        </div>
    </div>
</div>
