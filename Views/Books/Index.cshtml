@{
    ViewData["Title"] = "Personal library";
}

@model List<Book>

<div>
    <h1 style=" text-align:center">
        Personal library
    </h1>
    <br />
</div>

<div class="d-grid gap-3" style="grid-template-columns: repeat(8, 100px); grid-template-rows: repeat(3, 300px);">
    @if (Model != null)
    {
        foreach (var items in Model)
        {
            <div>
                <img src="/images/default-cover.jpg" alt="" width="100">
                <p class="small">@items.Title.ToUpper()</p>
            </div>
