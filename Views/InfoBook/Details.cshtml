@{
}

@model Book

<div style="align-content: center">
    @if (Model is not null)
    {
        <h1>@Model.Title.ToUpper()</h1>
        <h2>@Model.Author.ToUpper()</h2>
        <img src="@Model.Cover" style="width: 30%"/>
        <p>@Model.Description</p>
    }
</div>