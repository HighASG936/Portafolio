<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portafolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Portafolio.styles.css" asp-append-version="true" />
</head>

<body>
    <style>
        .sidebar 
        {
            position: fixed;
            top: 0;
            left: 0;
            width: 10%;
            height: 93%;
            display: flex;
            flex-direction: column;
            background: #012a72;
            padding: 25px 20px;
        }

        .icon
        {
            width: 30%;
            border-radius: 0%;
            gap: 0px;
        }

        a
        {
            text-decoration: none;
            font-family: Cambria;
            font-size:100%;    
            width: 100%;
            text-align: start;
            color: #fff9bd;
            gap: 10%;
        }

        a:hover 
        {
            color: gray;
        }

        ul
        {
            list-style: none;
        }

        li
        {
            height: 100%;
        }
        
    </style>

    <div>
        <div class="sidebar">
            <ul>
                <li>
                    <a asp-controller="Home" asp-action="Index">
                        <img src="/images/home.svg" class="icon" />
                        Home
                    </a>

                    <a asp-controller="Books" asp-action="Index">
                        <img src="/images/book.svg" class="icon" />
                        Books
                    </a>

                    <a asp-controller="Devices" asp-action="Index">
                        <img src="/images/device.svg" class="icon" />
                        Devices
                    </a>


                </li>
            </ul>
        </div>

        <div class="container" style="width: 90%">
            <main role="main" style="width: 100%">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Aurelio Siordia González
        </div>  
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
